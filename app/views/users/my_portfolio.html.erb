<h1>My Portfolio</h1>

<h3>Search for Bicycles</h3>
<div id="bicycle-lookup">
  <%= form_tag search_bicycles_path, remote: true, method: :get, id: "bicycle-lookup-form" do %>
  <div class = "form-group row no-padding text-center col-md-12">
    <div class="col-md-l0">
      <%= text_field_tag :bicycle, params[:bicycle], placeholder: "Bicycle Type", autofocus: true,
      class: "form-control search-box input-lg" %>
    </div>
  </div class="col-md-2">
  <%= button_tag(type: :submit, class: "btn btn-lg btn-success") do %>
  <i class="fa fa-search"></i>Look up a Bicycle
  <% end %>
  </div>
  </div>
  <% end %>
</div>
<div id="results">
  <%= render 'users/result' %>
</div>
<%= render 'bicycles/list' %>