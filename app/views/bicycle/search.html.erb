<h1>Listing bicycle</h1>

<%= link_to 'New bicycle', new_bicycle_path %> 

<table>
  <tr>
    <th>name</th>
    <th>make</th>
    <th colspan="3"></th>
  </tr>

  <% @bicycles.each do |bicycle| %>
    <tr>
      <td><%= bicycle.name %></td>
      <td><%= bicycle.make %></td>
      <td><%= link_to 'Show', bicycle_path(bicycle) %></td>
      <td><%= link_to 'Edit', edit_bicycle_path(bicycle) %></td>
      <td><%= link_to 'Destroy', bicycle_path(bicycle),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>


  <%= form_tag bicycles_path, :method => 'get' do %>
     <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :name => nil %>
     </p>
 <% end %>

</table>