<table class="table table-striped">
  <thread>
    <tr>
      <th>Name</th>
      <th>Make</th>
      <th>Rent Price</th>
      <% if @user.id == current_user.id %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thread>
  <tbody>
    <% @user_bicycles.each do |user_bicycle| %>
      <tr>
        <td><%= user_bicycle.name %></td>
        <td><%= user_bicycle.make %></td>
        <td><%= user_bicycle.rent_price %></td>
        <% if @user.id == current_user.id %>
          <td>
            <%= link_to "Delete this bicycle", user_bicycle_path(user_bicycle), method: :delete,
            data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %>
          </td>
        <% end %>
      </tr>
    <% end %> 
  </tbody>
</table>